<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    tools:context="com.tju.twist.atinote.SettingActivity">

    <LinearLayout
        android:id="@+id/setting_toorbar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/btn_setting_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/btns_margin"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_main"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="26dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size"
            android:text="@string/setting"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/setting_toorbar"
        android:id="@+id/btn_log_on"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_setting_user"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/icon"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_weight="8"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_setting_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/board_margin"
                android:layout_marginTop="@dimen/board_margin"
                android:text="登录"
                android:textSize="25dp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/text_setting_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/board_margin"
                android:layout_marginBottom="@dimen/board_margin"
                android:text="欢迎加入AntiNote的大家庭"
                android:textColor="@color/colorPrimary"
                />

        </LinearLayout>

        <ImageView
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingRight="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_enter"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_color_setting"
        android:layout_below="@id/btn_log_on"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="20"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text="颜色设置"
            android:layout_marginLeft="@dimen/left_margin"
            android:textColor="@color/colorPrimary"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingRight="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_enter"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_data_sync"
        android:layout_below="@id/btn_color_setting"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="20"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text="数据同步"
            android:layout_marginLeft="@dimen/left_margin"
            android:textColor="@color/colorPrimary"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingRight="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_enter"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_feedback"
        android:layout_below="@id/btn_data_sync"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="20"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text="意见反馈"
            android:layout_marginLeft="@dimen/left_margin"
            android:textColor="@color/colorPrimary"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingRight="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_enter"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_about_us"
        android:layout_below="@id/btn_feedback"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="2dp">

        <TextView
            android:layout_weight="20"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text="关于我们"
            android:layout_marginLeft="@dimen/left_margin"
            android:textColor="@color/colorPrimary"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingRight="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_enter"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_update"
        android:layout_below="@id/btn_about_us"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="20"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text="检查更新"
            android:layout_marginLeft="@dimen/left_margin"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="快速登录"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/text_center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/setting_share_qq"
            android:layout_margin="8dp"
            android:layout_width="@dimen/share_icon_size"
            android:layout_height="@dimen/share_icon_size"
            android:layout_toLeftOf="@id/text_center"
            android:src="@drawable/umeng_socialize_qq_off" />

        <ImageView
            android:id="@+id/setting_share_sina"
            android:layout_margin="8dp"
            android:layout_width="@dimen/share_icon_size"
            android:layout_height="@dimen/share_icon_size"
            android:src="@drawable/umeng_socialize_sina_off"
            android:layout_toRightOf="@id/text_center"/>
    </RelativeLayout>

</RelativeLayout>
