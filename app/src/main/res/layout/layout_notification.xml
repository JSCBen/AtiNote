<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:id="@+id/layout_notification"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <at.markushi.ui.CircleButton
            android:id="@+id/btn_noti_color0"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cb_color="@color/color0"
            app:cb_pressedRingWidth="8dip" />

        <at.markushi.ui.CircleButton
            android:id="@+id/btn_noti_color1"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cb_color="@color/color1"
            app:cb_pressedRingWidth="8dip" />

        <at.markushi.ui.CircleButton
            android:id="@+id/btn_noti_color2"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cb_color="@color/color2"
            app:cb_pressedRingWidth="8dip" />

        <at.markushi.ui.CircleButton
            android:id="@+id/btn_noti_color3"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cb_color="@color/color3"
            app:cb_pressedRingWidth="8dip" />

        <at.markushi.ui.CircleButton
            android:id="@+id/btn_noti_color4"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cb_color="@color/color4"
            app:cb_pressedRingWidth="8dip" />

    </LinearLayout>

</RelativeLayout>
